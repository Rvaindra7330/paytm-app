{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    
  },
  "include": [
    "index.ts",
    "client.ts",
    "prisma/**/*.prisma",
    "generated/**/*.d.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
